public  class  Rectangle
 {
     public  static  void  main ( String [] args ) {
 
 
int largeur =  0 ;
int longueure =  0 ;
 
essayer
{
// Lire la longueur du rectangle au clavier
Entrée du scanner =  nouveau  scanner ( System . In );
 
Système . dehors . println ( " Veuillez taper la longueure du rectangle " );
longueure =  Entier . parseInt (entrée . nextLine ());
 
// Lire la largeur du rectangle au clavier
Système . dehors . println ( " Veuillez taper la largeur du rectangle " );
largeur =  Entier . parseInt (entrée . nextLine ());
 
 
}
// Vérifier si l'entrée clavier est valide
catch ( NumberFormatException ne)
{
Système . dehors . println ( " Valeur incorrecte "  + ne);
Système . sortie ( 0 ); // Sortir dans le programme
}
 
/ *
* le périmètre d'un rectangle =
* 2 * (longueure + largeur)
* /
 
int périmètre =  2  * (longueure + largeur);
 
Système . dehors . println ( " Le périmètre du rectangle est "  + périmètre );
}
 
}
